<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>
  Ingredients:<br>
  <%= f.fields_for :ingredients do |i| %>
    Name: <%= i.text_field :name %><br>
    Quantity: <%= i.text_field :quantity %><br>
  <% end %>
  <%= link_to 'add ingredient', @recipe %>
<%= f.submit %>
<% end %>
