<%= form_for @recipe do |f| %>
  Name of Recipe: <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ing| %><br>

    <%= ing.label :ingredient %>
    <%= ing.text_field :name %><br>

    <%= ing.label :quantity %>
    <%= ing.number_field :quantity %><br>

    <% end %>

  <br><%= f.submit %>

<% end %>
